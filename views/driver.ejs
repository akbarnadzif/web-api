<html>
  <head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </head>
  <body>
    <div class="container">
      <h3>Input Data Driver</h3>
      <a href="/index" class="waves-effect waves-light btn right" style="width: 8%"><i class="material-icons">home</i></a>
      <a href="/driver" class="waves-effect waves-light btn">Data Driver</a>
      <a href="/tarif" class="waves-effect waves-light btn">Data Tarif</a>
      <a href="/transportasi" class="waves-effect waves-light btn"
        >Data Transportasi</a
      >
      <br /><br />
      
      <!-- <h3>Data Tarif</h3> -->
      <table>
        <thead>
          <tr>
            <th>No</th>
            <!-- <th>ID</th> -->
            <th>Nama</th>
            <th>Usia</th>
            <th>Rating Driver</th>
            <th>Plat Nomer</th>
            <th>Transportasi</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0;i<data_driver.length;i++) { %>
          <tr>
            <td><%= [i+1] %></td>
            <!-- <td><%= data_driver[i].id_data_driver %></td> -->
            <td><%= data_driver[i].nama %></td>
            <td><%= data_driver[i].usia %></td>
            <td><%= data_driver[i].rating_driver %></td>
            <td><%= data_driver[i].plat_nomor %></td>
            <td><%= data_driver[i].nama_transportasi %></td>
            <td>
              <a href="/driver/hapus/<%= data_driver[i].id_data_driver %>" class="waves-effect waves-light btn">Delete</a>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <br />
      <!-- <a class="waves-effect waves-light btn">Tambah</a> <br /><br /> -->
      <!-- Modal Trigger -->

      <a class="waves-effect waves-light btn modal-trigger" href="#modal1"
        >Tambah</a
      ><br><br>

      <!-- Modal Structure -->
      <div id="modal1" class="modal" style="width: 30%">
        <div class="modal-content">
          <h4>Tambah Data Driver</h4>
          <br />
          <div class="row">
            <form method="POST" action="/driver">
                <div class="input-field col s12">
                  <input name="nama" id="nama" type="text" class="validate" />
                  <label for="nama">Nama</label>
                </div>
                <div class="input-field col s12">
                  <input name="usia" id="usia" type="text" class="validate" />
                  <label for="usia">Usia</label>
                </div>
                <div class="input-field col s12">
                  <input name="rating_driver" id="rating_driver" type="text" class="validate" />
                  <label for="rating_driver">Rating Driver</label>
                </div>
              
                <div class="input-field col s12">
                  <input name="plat_nomor" id="plat_nomor" type="text" class="validate" />
                  <label for="plat_nomor">Plat Nomor</label>
                </div>
                <div class="input-field col s12">
                  <select name="id_transportasi">
                    <option value="" disabled selected>Pilih Transportasi</option>
                    <% data_trans.forEach(function(data, q){ %> 
                    <option value="<%= data.id_transportasi %>"><%= data.nama %></option>
                    <% }) %>
                  </select>
                  <label>Menu Pilihan</label>
                </div>
                <div class="modal-footer">
                  <input class="modal-close waves-effect waves-green btn" type="submit" value="send"
                    >
                </div>
              </form>
            </div>
        </div>
        
      </div>
      <script>
        $(document).ready(function() {
          $(".modal").modal();
        });
        $(document).ready(function(){
          $('select').formSelect();
        });
      </script>
    </div>
  </body>
</html>