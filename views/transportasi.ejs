<html>
  <head>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </head>
  <body>
    <div class="container">
      <h1>Input Data <%= title %></h1>
      <a href="/driver" class="waves-effect waves-light btn">Data Driver</a>
      <a href="/tarif" class="waves-effect waves-light btn">Data Tarif</a>
      <a href="/transportasi" class="waves-effect waves-light btn"
        >Data Transportasi</a
      >
      <br /><br /><br />
      <!-- <h3>Data Tarif</h3> -->
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Nama</th>
            <th>Rating</th>
            <th>Tarif Tunai</th>
            <th>Tarif nonTunai</th>
            <th>Jumlah Penumpang</th>
            <th>Deskripsi</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0;i<data_trans.length;i++) { %>
          <tr>
            <td><%= data_trans[i].id_transportasi %></td>
            <td><%= data_trans[i].nama %></td>
            <td><%= data_trans[i].rating %></td>
            <td><%= data_trans[i].tarif_tunai_perKm %></td>
            <td><%= data_trans[i].tarif_nontunai_perKm %></td>
            <td><%= data_trans[i].jumlah_penumpang %></td>
            <td><%= data_trans[i].deskripsi %></td>
            <td>                
                <button class="waves-effect waves-light btn">Delete</button>
              </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <br />
      <a class="waves-effect waves-light btn modal-trigger" href="#modal2"
      >Tambah</a
    >      <!-- Modal Structure -->
      <div id="modal2" class="modal" style="width: 30%">
          <div class="modal-content">
            <h4>Tambah Data <%= title %></h4>
            <br /><br />
            <div class="row">
              <form method="POST" action="/transportasi">
                  <div class="input-field col s12">
                    <input name="nama" id="nama" type="text" class="validate" />
                    <label for="nama">Nama</label>
                  </div>
                  <div class="input-field col s12">
                    <input name="rating" id="rating" type="text" class="validate" />
                    <label for="rating">Rating</label>
                  </div>
                  <div class="input-field col s12">
                    <input name="tarif_tunai_perKm" id="tarif_tunai_perKm" type="text" class="validate" />
                    <label for="tarif_tunai_perKm">Tarif Tunai</label>
                  </div>
                  <div class="input-field col s12">
                    <input name="tarif_nontunai_perKm" id="tarif_nontunai_perKm" type="text" class="validate" />
                    <label for="tarif_nontunai_perKm">Tarif nonTunai</label>
                  </div>
                  <div class="input-field col s12">
                    <input name="jumlah_penumpang" id="jumlah_penumpang" type="text" class="validate" />
                    <label for="jumlah_penumpang">Jumlah Penumpang</label>
                  </div>
                  <div class="input-field col s12">
                    <input name="deskripsi" id="deskripsi" type="text" class="validate" />
                    <label for="deskripsi">Deskripsi</label>
                      </div>
                  <div class="modal-footer">
                    <input class="modal-close waves-effect waves-green btn" type="submit" value="send"
                      >
                  </div>
              </form>
            </div>
          </div>
        </div>
        <script>
            $(document).ready(function() {
              $(".modal").modal();
            });
          </script>
    </div>
  </body>
</html>
